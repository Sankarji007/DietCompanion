<div>
    {{nav-bar email=emailaddress homepage=(action 'HomePage') playlist=(action 'callplaylist')}}
</div>

<div id="main" style="padding: 5%;">

    {{#if shownothing}}
    <div class="text-center">
        <h1>No Results Found</h1>
    </div>
    {{else}}
    {{#if checkbox}}
    <button class="btn btn-primary " {{action 'getPlaylistIds'}}>Finish</button>
    {{else}}
    <button class="btn btn-primary position-relative top-0 start-100 translate-middle" {{action 'showcheckbox'}}>Publish
        PlayList</button>
    {{/if}}
    <p class=" h1 fw-bold ">Saved Recipes</p>

    <div class="row row-cols-2 row-cols-md-4 row-cols-lg-6">
         
        {{#each resultset.ResultSet as |result|}}
        
        {{#my-cards result=result viewcards=(action 'viewcards') isdelete=true email=emailaddress reload=(action
        'getSavedRecipe') showcheck=checkbox uselocal=true}}

            {{#if checkbox}}
            <input type="checkbox" name="Checkbox" value={{result.recipe.uri}} style="width:2vw;height:2vh"/>
        {{/if}}

        {{/my-cards}}
        {{/each}}
    </div>
    
    {{/if}}
    
</div>

{{outlet}}